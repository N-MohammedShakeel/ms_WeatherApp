<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempDisplay"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDisplay"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toStartOf="@+id/tempDisplay"
        app:layout_constraintStart_toEndOf="@+id/timeDisplay"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/c_s" />
</androidx.constraintlayout.widget.ConstraintLayout>
